{
  "manifest_version": 3,
  "name": "X-BG",
  "version": "1.0",
  "description": "Made with ❤️ by @TheVixhal",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}